<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:background="@drawable/component_background"
                                   card_view:contentPadding="5dp"
                                   android:id="@+id/cvAdminAdBanner"
                                   card_view:cardUseCompatPadding="true"
                                   card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/clConcertCalendar"
            android:background="@color/darken_grey_transparent">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/ivPhotoArtist5"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

        <TextView
                android:text="{{adbanner_name}}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAdBannerName5"
                card_view:layout_constraintStart_toEndOf="@+id/ivPhotoArtist5"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/text_button_foreground_color"
                android:fontFamily="sans-serif-medium" card_view:layout_constraintEnd_toStartOf="@+id/ivEditAdBanner5"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:text="{{friendly_id}}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvFriendlyId5"
                android:layout_marginStart="8dp"
                card_view:layout_constraintStart_toEndOf="@+id/ivPhotoArtist5"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toBottomOf="@+id/tvAdBannerName5"
                android:textColor="@color/text_button_foreground_color"
                android:fontFamily="sans-serif-light" card_view:layout_constraintEnd_toStartOf="@+id/ivEditAdBanner5"
                android:layout_marginEnd="16dp"/>

        <TextView
                android:text="{{event_date}}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvEventDate3"
                card_view:layout_constraintStart_toEndOf="@+id/ivPhotoArtist5"
                card_view:layout_constraintTop_toBottomOf="@+id/tvFriendlyId5"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_button_foreground_color"
                android:fontFamily="sans-serif-light" card_view:layout_constraintEnd_toStartOf="@+id/ivEditAdBanner5"
                android:layout_marginEnd="16dp"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" card_view:srcCompat="@drawable/ic_baseline_delete_24"
                android:id="@+id/ivDeleteAdBanner5"
                card_view:layout_constraintTop_toTopOf="parent" card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" card_view:srcCompat="@drawable/ic_baseline_edit_note_24"
                android:id="@+id/ivEditAdBanner5"
                card_view:layout_constraintEnd_toStartOf="@+id/ivDeleteAdBanner5"
                card_view:layout_constraintBottom_toBottomOf="parent" card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>