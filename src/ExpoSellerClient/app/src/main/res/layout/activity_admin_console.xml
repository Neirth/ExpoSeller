<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.adminconsole.AdminConsoleActivity" android:background="@drawable/activity_background"
        android:id="@+id/clAdminConsole">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp" android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" android:background="@drawable/component_background"
            android:visibility="visible" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0" android:id="@+id/clMainFrame">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="0dp" app:layout_constraintEnd_toStartOf="@+id/glVerticalSeparator2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:visibility="visible"
                android:id="@+id/clLateralButtons">
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/darken_grey_transparent"
                    android:id="@+id/cvConcerts" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/clConcerts">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@drawable/ic_baseline_calendar_today_24"
                            android:id="@+id/ivConcerts" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"/>
                    <TextView
                            android:text="Conciertos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvConcerts"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/white"
                            app:layout_constraintVertical_bias="0.551"
                            app:layout_constraintStart_toEndOf="@+id/ivConcerts"
                            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/darken_grey_transparent"
                    android:id="@+id/cvAds" tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/cvConcerts" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/clAds">
                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content"
                            tools:srcCompat="@drawable/ic_baseline_ondemand_video_24"
                            android:id="@+id/ivAds" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                    />
                    <TextView
                            android:text="@string/ads"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvAds"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:textColor="@color/white"
                            app:layout_constraintVertical_bias="0.448"
                            app:layout_constraintStart_toEndOf="@+id/ivAds" android:layout_marginStart="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/darken_grey_transparent"
                    android:id="@+id/cvSystemSettings" android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/cvAds" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/clSystemSettings">

                    <ImageView
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_settings_24"
                            android:id="@+id/ivSystemSettings"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp" android:layout_marginBottom="8dp"
                            android:tint="@color/white"/>
                    <TextView
                            android:text="@string/settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvSystemSettings"
                            app:layout_constraintStart_toEndOf="@+id/ivSystemSettings"
                            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" android:textColor="@color/white"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:cardBackgroundColor="@color/darken_grey_transparent" android:id="@+id/cvExit"
                    android:visibility="visible" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/clExit">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_baseline_directions_run_24"
                            android:id="@+id/ivExit" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="16dp"/>
                    <TextView
                            android:text="@string/exit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/tvExit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@+id/ivExit" android:textColor="@color/white"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:id="@+id/glVerticalSeparator2"
                                                    app:layout_constraintGuide_percent="0.25"
                                                    android:orientation="vertical"/>
        <fragment
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="io.smartinez.exposeller.client.ui.adminconsole.fragment.adslist.AdsListFragment"
                android:id="@+id/fgAdsList"
                app:layout_constraintStart_toStartOf="@+id/glVerticalSeparator2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <fragment
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:name="io.smartinez.exposeller.client.ui.adminconsole.fragment.userlist.UserListFragment"
                android:id="@+id/fgUserList"
                app:layout_constraintStart_toStartOf="@+id/glVerticalSeparator2"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>