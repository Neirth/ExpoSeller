<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.smartinez.exposeller.client">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:name=".ExpoSellerApplication"
                 android:label="@string/app_name">

        <uses-library android:name="com.google.android.things"
                      android:required="false"/>

        <activity android:name=".ui.mainscreen.MainScreenActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".ui.adminconsole.AdminConsoleActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen"/>

        <activity android:name=".ui.pickupticket.PickupTicketActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen"/>

        <activity android:name=".ui.insertcoins.InsertCoinsActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen"/>

        <activity android:name=".ui.checkschedules.CheckSchedulesActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen"/>

        <activity android:name=".ui.buytickets.BuyTicketsActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen"/>

        <activity android:name=".ui.adsconcert.AdsConcertActivity"
                  android:screenOrientation="landscape"
                  android:theme="@style/ExpoSeller.Theme.FullScreen"/>
    </application>
</manifest>