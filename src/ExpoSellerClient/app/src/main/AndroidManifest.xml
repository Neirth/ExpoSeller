<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="io.smartinez.exposeller.client">

    <application
            android:label="@string/app_name"
            android:name=".ExpoSellerApplication">
        <uses-library
                android:name="com.google.android.things"
                android:required="false" />

        <activity
                android:name=".ui.mainscreen.MainScreenActivity"
                android:theme="@style/ExpoSeller.Theme.FullScreen"
                android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".ui.pickupticket.PickupTicketActivity"
                android:theme="@style/ExpoSeller.Theme.FullScreen"
                android:screenOrientation="landscape" />
        <activity
                android:name=".ui.insertcoins.InsertCoinsActivity"
                android:theme="@style/ExpoSeller.Theme.FullScreen"
                android:screenOrientation="landscape" />
        <activity
                android:name=".ui.checkschedules.CheckSchedulesActivity"
                android:theme="@style/ExpoSeller.Theme.FullScreen"
                android:screenOrientation="landscape" />
        <activity
                android:name=".ui.buytickets.BuyTicketsActivity"
                android:theme="@style/ExpoSeller.Theme.FullScreen"
                android:screenOrientation="landscape" />
        <activity
                android:name=".ui.adsconcert.AdsConcertActivity"
                android:theme="@style/ExpoSeller.Theme.FullScreen"
                android:screenOrientation="landscape" />
    </application>

</manifest>